{
  "name": "multi-row-tweet-deck",
  "version": "2.0.3",
  "description": "Google Chrome Extension for multi row view of TweetDeck",
  "main": "index.js",
  "scripts": {
    "dev:htdocs": "webpack-dev-server --mode development --config scripts/webpack/htdocs/dev.config.js",
    "build:htdocs": "webpack --mode production --config scripts/webpack/htdocs/prod.config.js",
    "dev": "webpack --watch --mode development --config scripts/webpack/webpack.config.ts",
    "build": "npm run build:pre-clean && npm run build:main && npm run build:post-clean",
    "build:pre-clean": "rimraf dist",
    "build:main": "NODE_ENV=production webpack --mode production --config scripts/webpack/webpack.config.ts",
    "build:post-clean": "rimraf \"dist/**/*.map\" dist/json.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatasoda/multi-row-tweet-deck.git"
  },
  "author": "whatasoda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whatasoda/multi-row-tweet-deck/issues"
  },
  "homepage": "https://github.com/whatasoda/multi-row-tweet-deck#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "file-loader": "^6.0.0",
    "icomoon-react": "^2.0.16",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "shallowequal": "^1.1.0",
    "styled-components": "^4.3.2",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/chrome": "0.0.85",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/shallowequal": "^1.1.1",
    "@types/styled-components": "^4.1.18",
    "@types/uuid": "^7.0.0",
    "@types/webpack": "^4.4.31",
    "@types/webpack-dev-server": "^3.10.1",
    "@types/webpack-merge": "^4.1.5",
    "@whatasoda/eslint-config": "^1.3.9",
    "@whatasoda/tsconfig": "^1.0.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.19.1",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^6.0.0",
    "typescript": "^3.8.3",
    "typescript-plugin-styled-components": "^1.4.3",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}
