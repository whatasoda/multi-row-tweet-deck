{
  "name": "multi-row-tweet-deck",
  "version": "2.0.3",
  "description": "Google Chrome Extension for multi row view of TweetDeck",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --watch --mode development --config scripts/webpack/webpack.config.ts",
    "build": "npm run build:pre-clean && npm run build:main && npm run build:post-clean",
    "build:pre-clean": "rimraf dist",
    "build:main": "NODE_ENV=production webpack --mode production --config scripts/webpack/webpack.config.ts",
    "build:post-clean": "rimraf \"dist/**/*.map\" dist/json.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatasoda/multi-row-tweet-deck.git"
  },
  "author": "whatasoda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whatasoda/multi-row-tweet-deck/issues"
  },
  "homepage": "https://github.com/whatasoda/multi-row-tweet-deck#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "redux": "^4.0.1",
    "rxjs": "^6.5.2",
    "styled-components": "^4.3.2",
    "typeless": "^0.1.9-alpha.0",
    "uuid": "^7.0.2",
    "warning": "^4.0.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.85",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/jss": "^9.5.8",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.18",
    "@types/uuid": "^7.0.0",
    "@types/webpack": "^4.4.31",
    "@whatasoda/eslint-config": "^1.3.9",
    "@whatasoda/tsconfig": "^1.0.3",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^2.1.1",
    "extract-loader": "^3.1.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.3.3",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.13.1",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3",
    "typescript-plugin-styled-components": "^1.4.3",
    "val-loader": "^1.1.1",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  }
}
